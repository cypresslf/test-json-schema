{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "person": {
      "$id": "person",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "age": {
          "type": "integer",
          "minimum": 0
        },
        "hobbies": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/hobby"
          }
        },
        "jobs": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/job"
          }
        }
      },
      "required": ["age"],
      "additionalProperties": false
    },
    "hobby": {
      "$id": "hobby",
      "type": "string"
    },
    "job": {
      "$id": "job",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "employer": { "type": "string" }
      },
      "required": ["title", "employer"],
      "additionalProperties": false
    }
  },
  "$ref": "#/definitions/person"
}
